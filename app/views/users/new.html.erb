<h1>New User Account</h1>

<%= form_with :model => @user do |form| %>
  <p>
    <%= form.label "Username:" %>
    <%= form.text_field "username" %>
  </p>
  <p>
    <%= form.label "Email:" %>
    <%= form.text_field "email" %>
  </p>
  <p>
    <%= form.label "Password:" %>
    <%= form.password_field "password" %>
  </p>
  <p>
    <%= form.submit "Sign up" %>
  </p>
<% end %>